flowchart LR
    subgraph ARCH["Archetypal Pattern"]
        A["{{domains}}<br/>{{frameworks}}<br/>{{elements}}<br/>{{spaces}}<br/>{{boundaries}}"]
    end

    subgraph DOMAINS["Four Domains"]
        direction TB
        P["Physical<br/>Spatial/Material"]
        S["Social<br/>Organizational"]
        C["Conceptual<br/>Knowledge"]
        Y["Individual<br/>Consciousness"]
    end

    A -->|transform| P
    A -->|transform| S
    A -->|transform| C
    A -->|transform| Y

    subgraph PHYSICAL["Physical Instances"]
        P1["Buildings"]
        P2["Rooms"]
        P3["Materials"]
    end

    subgraph SOCIAL["Social Instances"]
        S1["Organizations"]
        S2["Communities"]
        S3["Institutions"]
    end

    subgraph CONCEPTUAL["Conceptual Instances"]
        C1["Theories"]
        C2["Paradigms"]
        C3["Frameworks"]
    end

    subgraph PSYCHIC["Individual Instances"]
        Y1["Awareness"]
        Y2["Attention"]
        Y3["States"]
    end

    P --> P1 & P2 & P3
    S --> S1 & S2 & S3
    C --> C1 & C2 & C3
    Y --> Y1 & Y2 & Y3

    classDef archetypal fill:#805ad5,stroke:#553c9a,color:#fff
    classDef physical fill:#4299e1,stroke:#2b6cb0,color:#fff
    classDef social fill:#48bb78,stroke:#276749,color:#fff
    classDef conceptual fill:#ed8936,stroke:#c05621,color:#fff
    classDef individual fill:#ed64a6,stroke:#b83280,color:#fff

    class A archetypal
    class P,P1,P2,P3 physical
    class S,S1,S2,S3 social
    class C,C1,C2,C3 conceptual
    class Y,Y1,Y2,Y3 individual
